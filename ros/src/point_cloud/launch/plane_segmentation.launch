<launch>
  <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen" />

  <!-- Run a VoxelGrid filter to clean NaNs and downsample the data -->
  <node pkg="nodelet" type="nodelet" name="voxel_grid" args="load pcl/VoxelGrid pcl_manager" output="screen">
    <remap from="~input" to="/point_cloud/cloud_transformed" />
    <rosparam>
      filter_field_name: z
      filter_limit_min: -0.20
      filter_limit_max: 0.1
      filter_limit_negative: False
      leaf_size: 0.01
    </rosparam>
  </node>

  <node pkg="point_cloud" type="point_cloud_transform" name="point_cloud_transform" output="screen" />

  <!--  &lt;!&ndash; Estimate point normals &ndash;&gt;-->
  <!--  <node pkg="nodelet" type="nodelet" name="normal_estimation" args="load pcl/NormalEstimation pcl_manager" output="screen">-->
  <!--    <remap from="~input" to="/voxel_grid/output" />-->
  <!--    <rosparam>-->
  <!--      # -[ Mandatory parameters-->
  <!--      k_search: 0-->
  <!--      radius_search: 0.025-->
  <!--      # Set the spatial locator. Possible values are: 0 (ANN), 1 (FLANN), 2 (organized)-->
  <!--      spatial_locator: 0-->
  <!--    </rosparam>-->
  <!--  </node>-->

  <!-- Segment the plane -->
  <node pkg="point_cloud" type="planar_segmentation" name="planar_segmentation" output="screen">
    <rosparam>
      distance_threshold: 0.02
      max_iterations: 1000
      optimize_coefficients: true
      normal_distance_weight: 0.1
      eps_angle: 0.10
    </rosparam>
  </node>

  <!--  <node pkg="nodelet" type="nodelet" name="extract_plane_indices" args="load pcl/ExtractIndices pcl_manager" output="screen">-->
  <!--    <remap from="~input"   to="/voxel_grid/output" />-->
  <!--    <remap from="~indices" to="/planar_segmentation/inliers" />-->
  <!--    <rosparam>-->
  <!--      negative: true-->
  <!--    </rosparam>-->
  <!--  </node>-->

</launch>